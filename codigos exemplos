codigo 11 >>>

inicio
    string nome, sobrenome
    inteiro idade, ano_atual, ano_nascimento

    escreva "Digite seu nome: "
    leia nome
    escreva "Digite seu sobrenome: "
    leia sobrenome
    escreva "Digite sua idade: "
    leia idade

    ano_atual igual 2024
    ano_nascimento igual ano_atual subtrair idade

    escreva "Olá, ", nome, " ", sobrenome, "!"
    escreva "Você nasceu em: ", ano_nascimento
fim


codigo 12 >>>

inicio
    inteiro escolha
    repita
        escreva "\nMenu de Operações:"
        escreva "\n1. Calcular Fatorial"
        escreva "\n2. Verificar Número Primo"
        escreva "\n3. Somar Dois Números"
        escreva "\n4. Subtrair Dois Números"
        escreva "\n5. Sair"
        escreva "\nEscolha uma opção: "
        leia escolha

        se (escolha igual 1) entao
            inteiro num, fatorial, i
            escreva "Digite um número para calcular o fatorial: "
            leia num
            fatorial igual 1
            para i de 1 ate num faça
                fatorial igual fatorial multiplicar i
            fimpara
            escreva "O fatorial de ", num, " é: ", fatorial
        senao
            se (escolha igual 2) entao
                inteiro numero, divisor
                divisor igual 0
                escreva "Digite um número para verificar se é primo: "
                leia numero
                para i de 1 ate numero faça
                    se (numero mod i igual igual 0) entao
                        divisor igual divisor somar 1
                    fimse
                fimpara
                se (divisor igual igual 2) entao
                    escreva numero, " é primo."
                senao
                    escreva numero, " não é primo."
                fimse
            senao
                se (escolha igual 3) entao
                    inteiro a, b, soma
                    escreva "Digite dois números para somar: "
                    leia a, b
                    soma igual a somar b
                    escreva "A soma é: ", soma
                senao
                    se (escolha igual 4) entao
                        inteiro a, b, resultado
                        escreva "Digite dois números para subtrair: "
                        leia a, b
                        resultado igual a subtrair b
                        escreva "A subtração é: ", resultado
                    senao
                        se (escolha igual 5) entao
                            escreva "Saindo do programa..."
                            saia
                        senao
                            escreva "Opção inválida. Tente novamente."
                        fimse
                    fimse
                fimse
            fimse
        fimse
    ate (escolha igual 5)
fimumrepita
fim